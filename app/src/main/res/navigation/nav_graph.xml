<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainView">

    <fragment
        android:id="@+id/mainView"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/activity_main">

        <action
            android:id="@+id/action_mainView_to_searchView"
            app:destination="@id/searchView" />
    </fragment>
    <fragment
        android:id="@+id/searchView"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/activity_search_view">

        <action
            android:id="@+id/action_searchView_to_mainView"
            app:destination="@id/mainView" />
    </fragment>
</navigation>