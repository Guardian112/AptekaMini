<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SearchViewActivity">

    <FrameLayout
        android:id="@+id/menuPanel"
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:background="@color/menuback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/searchScrollView">

        <Button
            android:id="@+id/searchButton"
            android:layout_width="70dp"
            android:layout_height="69dp"
            android:layout_gravity="center|end|top"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/button"
            android:fontFamily="@font/nunito_regular"
            android:onClick="searchOnClick"
            app:cornerRadius="22dp"
            app:icon="@android:drawable/ic_menu_search"
            app:iconSize="35sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="20sp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Введите запрос"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/goToMain"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="75dp"
            android:backgroundTint="@color/button"
            android:fontFamily="@font/nunito_regular"
            android:onClick="mainOnClick"
            android:text="Главная"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:cornerRadius="22dp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <Button
            android:id="@+id/selectMedic"
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|left"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/offbutton"
            android:fontFamily="@font/nunito_regular"
            android:onClick="selectMedicOnClick"
            android:text="Лекарства"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:cornerRadius="22dp"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />

        <Button
            android:id="@+id/selectPharmacy"
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/button"
            android:fontFamily="@font/nunito_regular"
            android:onClick="selectPharmacyOnClick"
            android:text="Аптеки"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:cornerRadius="22dp"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />

    </FrameLayout>

    <ScrollView
        android:id="@+id/searchScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="13dp"
        android:scrollbarThumbVertical="@color/button"
        android:scrollbarTrackVertical="@color/offbutton"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuPanel">

        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/searchScrollView">

            <LinearLayout
                android:id="@+id/medicLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/medic"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/medicName"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/infoback_fill"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Арбидол"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/medicDozirovka"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/infoback_fill"
                        android:fontFamily="@font/nunito_regular"
                        android:text="20 тб"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/medicPrise"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/imageback_fill"
                        android:fontFamily="@font/nunito_regular"
                        android:text="от 100 руб"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/medic2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/medicName2"
                        android:layout_width="240dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/infoback_fill"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Нурофен"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/medicDozirovka2"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/infoback_fill"
                        android:fontFamily="@font/nunito_regular"
                        android:text="15 тб"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/medicPrise2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/imageback_fill"
                        android:fontFamily="@font/nunito_regular"
                        android:text="от 250 руб"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pharmacyLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/pharmac"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/pharmacyNameAndTime"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/infoback_fill"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Антей \n\n с 09:00 до 20:00"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:id="@+id/adressPhoneView"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pharmacyAdress"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@drawable/infoback_fill"
                            android:fontFamily="@font/nunito_regular"
                            android:text="Кострома, ул. Сутырина, 16"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/pharmacyPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/infoback_fill"
                            android:fontFamily="@font/nunito_regular"
                            android:text="8(911)520-18-49"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pharmac2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/pharmacyNameAndTime2"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/infoback_fill"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Маскавит \n\n с 08:00 до 21:00"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:id="@+id/adressPhoneView2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/pharmacyAdress2"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@drawable/infoback_fill"
                            android:fontFamily="@font/nunito_regular"
                            android:text="Кострома, ул. Голубкова, 7а"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/pharmacyPhoneNumber2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/infoback_fill"
                            android:fontFamily="@font/nunito_regular"
                            android:text="8(920)398-08-71"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            tools:ignore="HardcodedText" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>