<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MedicListFragment">

    <ImageView
        android:id="@+id/appAvatar"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:contentDescription="AppAvatar"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuPanel"
        app:srcCompat="@drawable/symbol"
        tools:ignore="HardcodedText,MissingConstraints" />

    <FrameLayout
        android:id="@+id/menuPanel"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/menuBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/goToMain"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/button"
            android:fontFamily="@font/nunito_regular"
            android:text="Главная"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="22dp"
            tools:ignore="HardcodedText,RtlHardcoded" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/medicList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbarSize="13dp"
        android:scrollbarThumbVertical="@color/button"
        android:scrollbarTrackVertical="@color/offbutton"
        android:scrollbars="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuPanel" />

</androidx.constraintlayout.widget.ConstraintLayout>